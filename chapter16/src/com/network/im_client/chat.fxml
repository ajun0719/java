<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>

<VBox fx:id="vbRoot" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.network.im_client.ChatController" alignment="center">
  <children>
    <ScrollPane fx:id="spChat" prefWidth="500" prefHeight="300" VBox.vgrow="ALWAYS" >
	    <padding>
	      <Insets top="10.0" bottom="0.0" left="0.0" right="0.0"/>
	    </padding>
    </ScrollPane>
	<Label fx:id="label1" prefWidth="500" prefHeight="10"/>
	<TextArea fx:id="areaContent" prefWidth="500" prefHeight="100" minHeight="100" wrapText="true" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" promptText="请输入聊天消息"/>
	<HBox fx:id="hbBody" prefWidth="500" prefHeight="50" VBox.vgrow="ALWAYS">
	  <children>
	    <HBox fx:id="hbBody" prefWidth="100" prefHeight="50" HBox.hgrow="ALWAYS" />
        <Button fx:id="btnSend" prefWidth="100" prefHeight="50" text="发送" />
	  </children>
	    <padding>
	      <Insets top="10.0" bottom="0.0" left="0.0" right="0.0"/>
	    </padding>
    </HBox>
  </children>
  <padding>
    <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
  </padding>
</VBox>
